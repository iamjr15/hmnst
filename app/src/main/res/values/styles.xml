<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginSignUpButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mb</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SignUpButton" parent="LoginSignUpButton">
        <item name="android:background">@color/colorSignUp</item>
        <item name="android:text">@string/signup</item>
    </style>

    <style name="LoginButton" parent="LoginSignUpButton">
        <item name="android:background">@color/colorLogin</item>
        <item name="android:text">@string/login</item>
    </style>

    <style name="phonePrefixSpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/phone_prefixes_spinner_bg</item>
    </style>

    <style name="phonePrefixSpinnerItem" parent="loginActivity">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="loginActivity">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/mb</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="loginTextView" parent="loginActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/mb</item>
    </style>

    <style name="loginEditText" parent="loginActivity">
        <item name="android:background">@drawable/rect_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/mb</item>
    </style>

    <style name="blackButton" parent="loginActivity">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">29sp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:fontFamily">@font/mr</item>
    </style>

    <style name="nextButton">
        <item name="android:background">@drawable/next_btn_bg</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/next</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="addToFamily">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/mb</item>
    </style>

    <style name="theMember">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/mb</item>
    </style>

    <style name="familyCodeTitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/mb</item>
    </style>

    <style name="Title" parent="loginActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mb</item>
    </style>

    <style name="verifyTextView" parent="loginActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/mr</item>
    </style>

    <style name="ResendButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:fontFamily">@font/mr</item>
    </style>

    <style name="otpStyle">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">42sp</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/mr</item>
    </style>

    <style name="TextRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/mr</item>
    </style>

    <style name="TextLight" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ml</item>
    </style>

    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/TextRegular</item>
        <item name="android:textAppearanceMedium">@style/TextRegular</item>
        <item name="android:textAppearanceLarge">@style/TextRegular</item>
    </style>


</resources>
